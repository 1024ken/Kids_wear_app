<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if @user.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
    </div>
  </div>
</div>

<!--アカウント作成登録フォーム-->
<div class="container account">
  <div class="row account">
      <div class="card card-container">
        <h1>Sign up</h1>
          <%= form_with(model: @user, local: true, html: { class: "form-signin" }) do |f| %>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control" ,placeholder:"Name", autofocus:true %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, class: "form-control" ,placeholder:"Email address", autofocus:true %>
          </div>
          <div class="form-group">  
            <%= f.password_field :password, class: "form-control" ,placeholder:"Password", autofocus:true %>
          </div>
          <div class="form-group">  
            <%= f.password_field :password_confirmation, class: "form-control" ,placeholder:"Password Confirmation", autofocus:true %>
          </div>
          <div class="form-group">
            <%= f.submit "Create my account", class: "btn btn-lg btn-primary btn-block btn-signin" %>
          </div>  
          <% end %>

      </div>
  </div>
</div>