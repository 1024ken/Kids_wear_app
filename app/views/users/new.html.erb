<%= render  "layouts/share", locals: { message: @user } %>

<!--アカウント作成登録フォーム-->
<div class="container account">
  <div class="row account">
      <div class="card card-container">
        <h1 class="text-center">新規登録</h1>
          <%= form_with(model: @user, local: true, html: { class: "form-signin" }) do |f| %>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control" ,placeholder:"名前", autofocus:true, required: true %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, class: "form-control" ,placeholder:"メールアドレス", autofocus:true, required: true %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: "form-control" ,placeholder:"パスワード", autofocus:true, required: true %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, class: "form-control" ,placeholder:"パスワード確認", autofocus:true, required: true %>
          </div>
          <div class="form-group">
            <%= f.submit "アカウントを作成する", class: "btn btn-lg btn-primary btn-block btn-signin" %>
          </div>
          <% end %>

      </div>
  </div>
</div>
