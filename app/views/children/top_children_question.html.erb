<%= form_with(model: @children, url: new_child_path, method: :get, local: true) do |f| %>

    <div class="children_basic_question">
        <h1>1</h1>
        <div class="container">
            <div class="row">
                <div class="col-xs-6 col-md-4">
                    <%= f.text_field :name, class: "form-control" ,placeholder:"子供の名前", autofocus:true %>
                    <%= f.text_field :birthday, class: "form-control" ,placeholder:"お誕生日", autofocus:true %>
                    <label><%= f.radio_button :sex,"1" %>男の子</label>
                    <label><%= f.radio_button :sex,"2" %>女の子</label>
                    <!--newアクションへ-->
                    <%= f.submit '次へ' %>
                </div>    
            </div>
            <!--<input type="button" value="次へ" onClick="next_first()">-->
        </div>
    </div>
<% end %>