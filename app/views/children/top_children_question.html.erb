<div class="container basic">
  <div class="row basic">
    <div class="col-lg-12 text-center">
      <div class="basic-text">
        <h2 class="basic-heading">子供の基本情報</h2>
          <h3 class="basic-subheading text-muted">お子様の基本情報を入力してください。</h3>
      </div>
    </div>
  </div>
  
  <%= form_with(model: @children, url: new_child_path, method: :get, local: true, html: {class: "form-horizontal"}) do |f| %>
    <% if @children.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @children.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
   <% end %>
   <div class="form-group">
     <label class="col-md-4 control-label" for="textinput">子供の名前</label>  
     <div class="col-md-6 offset-md-1">
       <P><%= f.text_field :name, class: "form-control" ,placeholder:"子供の名前", autofocus:true, required: true %></P>
     </div>
   </div>
   
   
    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">子供の誕生日</label>
        <div class="col-md-6 offset-md-1">
          <div class='input-group date' id='datetimepicker'>
            <p><%= f.text_field :birthday, class: 'form-control',placeholder:"子供の誕生日", autofocus:true, required: true %></p>
              <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
              </span>
          </div>
        </div>
    </div>
    
    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">性別</label>
        <div class="col-md-6 offset-md-1">
    　　  　<div class="radio text-center">
            <label><%= f.radio_button :sex,"1", required: true %>男の子</label>
            <label><%= f.radio_button :sex,"2" %>女の子</label>
          </div>
        </div>  
    </div>
    
    
    
    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">サイズ</label>
        <div class="col-md-6 offset-md-1">
          <div class="size adjust text-center">
            <label><%= f.radio_button :size,60, required: true %>60</label>
            <label><%= f.radio_button :size,70 %>70</label>
            <label><%= f.radio_button :size,80 %>80</label>
            <label><%= f.radio_button :size,90 %>90</label>
            <label><%= f.radio_button :size,100 %>100</label>
          </div>  
        </div>
    </div>
      <!--childrenのnewアクションへ-->
      <%= f.submit '次へ', class:"btn btn-next" %>
<% end %>
    
                    
                    
                    
                    
                     