<div class="container basic">
  <div class="row basic">
    <div class="col-lg-12 text-center">
      <div class="basic-text">
        <h2 class="basic-heading">子供の基本情報</h2>
          <p class="border"></p>
            <h3 class="basic-subheading text-muted">お子様の基本情報を入力してください。</h3>
      </div>
    </div>
  </div>
  
 <%= form_with(model: @children, url: new_child_path, method: :get, local: true, html: {class: "form-horizontal"}) do |f| %>
   <div class="form-group">
     <label class="col-md-4 control-label" for="textinput">子供の名前</label>  
     <div class="col-md-6 offset-md-1">
       <P><%= f.text_field :name, class: "form-control" ,placeholder:"子供の名前", autofocus:true, required: true %></P>
     </div>
   </div>
   
   
    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">子供の誕生日</label>
        <div class="col-md-6 offset-md-1">
          <div class='input-group date' id='datetimepicker'>
            <p><%= f.text_field :birthday, class: 'form-control',placeholder:"子供の誕生日", autofocus:true, required: true %></p>
              <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
              </span>
          </div>
        </div>
    
    
    <div class="form-group">
       <div class="col-md-4 control-label">
         <label class="label-adjust"><%= f.label :sex, '性別', {class: 'form-label'} %></label>
       </div>
       <div class="col-md-6 btn-group" data-toggle="buttons">
         <label class="btn btn-outline-secondary adjust active" style="width:50%">
           <%= f.radio_button :sex, "1", {checked: true} %> 男性
         </label>
         <label class="btn btn-outline-secondary adjust" style="width:50%">
           <%= f.radio_button :sex, "2", {} %> 女性
         </label>
       </div>
    </div>
    

    
    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">サイズ</label>
        <div class="col-md-6 offset-md-1">
          <div class="size adjust text-center">
            <%= f.select :size, [[60, 60], [70, 70], [80, 80], [90, 90], [100, 100]], {} ,class:"form-control" %>

          </div>  
        </div>
    </div>
      <!--childrenのnewアクションへ-->
      <%= f.submit '次へ', class:"btn btn-next" %>
<% end %>
    
                    
                    
                    
                    
                     