<!--Sign in画面-->
<div class="container session">
  <div class="row session">
    <div class="card card-container">
      <h1 class="text-center">ログイン</h1>
        <%= form_with(scope: :session, url: sessions_path, html: { class: "form-signin" }, local: true) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, class: "form-control" ,placeholder:"メールアドレス", autofocus:true, required: true %>   
          </div>
           
          <div class="form-group">
            <%= f.password_field :password, class: "form-control" ,placeholder:"パスワード", autofocus:true, required: true %>
          </div>
          
