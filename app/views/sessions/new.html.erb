<!--Sign in画面-->
<div class="container">
  <div class="row">
      <div class="card card-container">
        <h1>Sign in</h1>
          <%= form_with(scope: :session, url: sessions_path, html: { class: "form-signin" }) do |f| %>
           <div class="form-group">
              <%= f.email_field :email, class: "form-control" ,placeholder:"Email address", autofocus:true %>   
           </div>
           
           <div class="form-group">
              <%= f.password_field :password, class: "form-control" ,placeholder:"Password", autofocus:true %>
           </div>
           <!--未完成・見た目だけ-->
           <div id="remember" class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
           </div>
        
           <div class="form-group">
              <%= f.submit "sign in", class: "btn btn-lg btn-primary btn-block btn-signin" %>
           </div>
           
           <!--未完成・見た目だけ-->
           <a href="#" class="forgot-password">
                Forgot the password?
          　</a>
          
           <% end %>
      </div>
    </div>
  </div>
</div>