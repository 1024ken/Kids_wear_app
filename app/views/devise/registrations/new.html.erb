<div class="card card-container">
  <h2 class="text-center">アカウント作成</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
      <%= devise_error_messages! %>


      <div class="form-group">
        <%= f.label :名前, class:"adjust-label" %><br/>
        <%= f.text_field :name, class: "form-control adjust col-md-5 col-sm", placeholder: "kengo1111", autofocus:true, required: true %><br/>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, class:"adjust-label" %><br/>
        <%= f.email_field :email, class: "form-control adjust col-md-5 col-sm", placeholder: "メールアドレスを入力して下さい", autofocus:true, required: true %><br/>
      </div>



      <div class="form-group">
        <%= f.label :パスワード, class:"adjust-label" %><br/>
        <!-- <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br/> -->
        <%= f.password_field :password, autocomplete: "off", class: "form-control adjust col-md-5 col-sm", placeholder: "パスワードを入力して下さい" %>
      </div>

      <!-- <div class="form-group">
        <%#= f.label :パスワード確認 %><br/>
        <%#= f.password_field :password_confirmation, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "Password confirmation" %>
      </div> -->

      <div class="actions pb-5"><br/><br/>
        <%= f.submit "アカウントを作成する", class: "btn btn-primary btn-block btn-signin" %>
      </div>
    <% end %>
    <div class="word-partition">or</div>
  <%= render "devise/shared/links" %>
</div>
