<%= form_tag charge_path, user_id: current_user.id do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: $5.00</span>
    </label>
  </article>
  <% if @children%>
    <%= hidden_field_tag :child_id, @children.id %>
  <% else %>
    <%= hidden_field_tag :child_id, params[:child_id] %>
  <% end %>
<!--チェックアウト-->
  <script
    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="pk_test_HMPNnEZuI8xHNOnQwt2Z53F5"
    data-amount="5000"
    data-name="Demo Site"
    data-description="Widget"
    data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
    data-locale="auto"
    data-currency="jpy">
  </script>
<% end %>