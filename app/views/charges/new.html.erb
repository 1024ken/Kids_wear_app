<div class="container basic">
    <div class="row basic">
      <div class="col-lg-12 text-center">
        <div class="basic-text">
          <h2 class="basic-heading">お支払い</h2>
          <h3 class="basic-subheading text-muted">サービスをご利用される場合は以下より、支払い情報を入力して下さい。</h3>
        </div>
      </div>
    </div>
  

<%= form_tag charge_path, user_id: current_user.id do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <!--<label class="amount">-->
    <!--  <span>月額5000円</span>-->
    <!--</label>-->
  </article>
  <% if @children %>
  <%# binding.pry %>
    <%= hidden_field_tag :child_id, @children.id %>
  <% else %>
    <%= hidden_field_tag :child_id, params[:child_id] %>
  <% end %>
  
  
  
  
  
<!--チェックアウト-->
<div class="checkout text-center">
  <script
    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="pk_test_HMPNnEZuI8xHNOnQwt2Z53F5"
    data-amount="5000"
    data-name="Basic Plan"
    data-description="Widget"
    data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
    data-locale="auto"
    data-currency="jpy">
  </script>
</div>  
<% end %>