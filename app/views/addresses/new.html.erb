<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%#binding.pry%>
      <!--newアクションからconfirmアクションへ-->
      <%= form_with(model: @addresses, url: confirm_addresses_path, local: true) do |f| %>
        <% if @addresses.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @addresses.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
             </ul>
          </div>
        <% end %>
          <table>
            <tbody>
              <tr>
                <th>名前<span class="text-danger">（必須）</span></th>
                <td><%= f.text_field :name, class: "form-control" ,placeholder:"名前", autofocus:true %></td>
              </tr>
              <tr>
                <th>名前（カナ）</th>
                  <td><%= f.text_field :kana, class: "form-control" ,placeholder:"名前（カナ）", autofocus:true %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                  <td><%= f.email_field :email, class: "form-control" ,placeholder:"メールアドレス", autofocus:true %></td>
              </tr>
              <tr>
                <th>電話番号</th>
                  <td><%= f.telephone_field :phone, class: "form-control" ,placeholder:"電話番号", autofocus:true %></td>
              </tr>
                  
                  <!--郵便番号入力したら、自動入力させる-->
              <tr>
                <th>郵便番号</th>
                  <td><%= f.text_field :post_code, class: "form-control" ,placeholder:"000", autofocus:true %></td>
              </tr>
              <tr>
                <th>都道府県</th>
                  <td><%= f.text_field :prefecture, class: "form-control" ,placeholder:"都道府県", autofocus:true %></td>
              </tr>
              <tr>
                <th>市区町村</th>
                  <td><%= f.text_field :city, class: "form-control" ,placeholder:"市区町村", autofocus:true %></td>
              </tr>
              <tr>
                <th>番地</th>
                  <td><%= f.text_field :street, class: "form-control" ,placeholder:"番地", autofocus:true %></td>
              </tr>
              <tr>
                <th>建物</th>
                  <td><%= f.text_field :building, class: "form-control" ,placeholder:"建物", autofocus:true %></td>
              </tr>
            </tbody>
          </table>
             <%= f.submit '確認' %>
        <% end %>
    </div>
  </div>
</div>     

