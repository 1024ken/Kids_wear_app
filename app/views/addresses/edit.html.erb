　<div class="container basic">
    <div class="row basic">
      <div class="col-lg-12 text-center">
        <div class="basic-text">
          <h2 class="basic-heading">お届け先の変更</h2>
          <h3 class="basic-subheading text-muted">ご登録いただいているお届け先を変更することができます。</h3>
        </div>
      </div>
    </div>
      <%= form_with(model: @addresses, local: true, html: {class: "form-horizontal"}) do |f| %>
        <div class="form-group">
          <label class="col-md-4 control-label" for="textinput">名前</label>  
          <div class="col-md-6 offset-md-1">
            <P><%= current_user.name %></p>
            
              <%#= f.text_field :name, class: "form-control" ,placeholder:"Name", autofocus:true %>
          </div>
        </div>
          
        <!--<div class="form-group">-->
        <!--  <label class="col-md-4 control-label" for="textinput">名前（カナ）</label>  -->
        <!--  <div class="col-md-6 offset-md-1">-->
        <!--    <p><%#= f.text_field :kana, class: "form-control" ,placeholder:"名前（カナ）", autofocus:true %></p>-->
        <!--  </div>-->
        <!--</div>-->
        
          
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">メールアドレス</label>  
          <div class="col-md-6 offset-md-1">
            <P><%= current_user.email %></p>
            <%#= f.email_field :email, class: "form-control" ,placeholder:"メールアドレス", autofocus:true %>
          </div>
        </div>
        
          
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">電話番号</label>  
          <div class="col-md-6 offset-md-1">
            <%= f.telephone_field :phone_code, class: "form-control" ,placeholder:"例）08088888888", autofocus:true %>
          </div>
        </div>  
          
          
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">郵便番号</label>  
          <div class="col-md-6 offset-md-1">
            <%= f.text_field :post_code, class: "form-control" ,placeholder:"例）111-1111", autofocus:true %>
          </div>
        </div>
        
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">都道府県</label>  
          <div class="col-md-6 offset-md-1">
            <%#= f.text_field :prefecture_code, class: "form-control" ,placeholder:"都道府県", autofocus:true %>
            <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, {} ,{class: "form-control"} %>
                      
          </div>
        </div>  
          
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">市区町村</label>  
          <div class="col-md-6 offset-md-1">
            <%= f.text_field :city_code, class: "form-control" ,placeholder:"市区町村", autofocus:true %>
          </div>
        </div>  
          
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">番地</label>  
          <div class="col-md-6 offset-md-1">
            <%= f.text_field :street_code, class: "form-control" ,placeholder:"番地", autofocus:true %>
          </div>
        </div>  
          
          
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">建物</label>  
          <div class="col-md-6 offset-md-1">
            <%= f.text_field :building_code, class: "form-control" ,placeholder:"建物", autofocus:true %>
          </div>
        </div>
          <%= f.submit '変更内容を更新する', class:"btn btn-next" %>
      <% end %>
</div> 


