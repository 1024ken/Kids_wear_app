<div class="container">
  <div class="container basic">
    <%= render partial: "shared/basic-title-rule", locals: { heading_text: "お問い合わせ内容の確認", subheading_text: "以下の内容で会員情報を登録しますか。" } %>
    <%=form_with(model: @contact, local: true, url: contacts_path, html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group">
      <label class="col-md-6 control-label">名前:</label>
      <div class="col-md-6 offset-md-1 confirm-adjust">
        <%= f.hidden_field :name%>
        <%= @contact.name %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-6 control-label">メールアドレス:</label>
      <div class="col-md-6 offset-md-1 confirm-adjust">
        <%= f.hidden_field :email%>
        <%= @contact.email %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-6 control-label">お問い合わせ内容:</label>
      <div class="col-md-6 offset-md-1 confirm-adjust">
        <%= f.hidden_field :content%>
        <%= @contact.content %>
      </div>
    </div>
      <%= f.submit "お問い合わせを送信する" , class:"btn btn-next"%>
    <% end %>

    <%=form_with(model: @contact, local: true, url: new_contact_path, method:"get") do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :content %>

    <%= f.submit "戻る", class: "btn btn-back", name: "back" %>
    <% end %>
  </div>
</div>
